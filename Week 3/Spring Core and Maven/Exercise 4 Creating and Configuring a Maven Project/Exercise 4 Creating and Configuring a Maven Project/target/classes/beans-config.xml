<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="departmentBean" class="com.cts.app.Department">
        <property name="departmentName" value="Software Development"/>
    </bean>

    <bean id="employeeBean" class="com.cts.app.Employee">
        <property name="employeeId" value="902"/>
        <property name="employeeName" value="Raja Kumar"/>
        <property name="department" ref="departmentBean"/>
    </bean>

</beans>
